<h1>List Users</h1>

<table>
    <tr>
        <th>Name</th>
        <th>Companies</th>
        <th>Roles</th>
    </tr>
    <% @users.each do |user| %>
        <tr>
            <td><%= link_to user.full_name, user_path(user) %></td>
            <td>
                <%user.companies.each do |company|%>
                    <p><%= link_to company.name, company_path(company) %></p>
                <% end %>
            </td>
            <td><%= user.roles.map { |role| role.name }.join(", ") %></td>
        </tr>
    <% end %>
</table>
